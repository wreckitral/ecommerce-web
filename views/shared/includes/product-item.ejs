<article class="product-item">
    <img src="<%= product.imageUrl %>" alt="<%= product.title %>">
    <div class="product-item-content">
        <h2><%= product.title %></h2>
        <div class="product-item-actions">
            <% if (locals.isAdmin) { %>
                <a class="btn btn-alt" href="/admin/products/<%= product.id %>">View & Edit</a>
                <form action="/admin/products/<%= product.id %>/delete" method="POST">
                    <input type="hidden" name="csrfToken" value="<%= locals.csrfToken %>">
                    <button class="btn btn-alt delete-btn">Delete</button>
                </form>
            <% } else { %>
                <a class="btn btn-alt" href="/products/<%= product.id %>">View Details</a>
            <% } %>
        </div>
    </div>
</article>